                    <!--used in TEI Header
                    <elementSpec module="tagdocs" ident="valDesc" mode="delete"/>-->
                    <elementSpec module="tagdocs" ident="valItem" mode="delete"/>
                    <elementSpec module="tagdocs" ident="valList" mode="delete"/>
